{{!< base}}

<main class="h-full overflow-y-auto" x-data="events">
  <div class="container px-6 mx-auto grid">
    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
      Events
    </h2>

    <!-- Table -->
    <div x-data="table">
      {{#> table}}
        {{#*inline "tableHeader"}}
          <tr>
            <th class="px-4 py-3 w-32">#</th>
            <th class="px-4 py-3 w-64">Date</th>
            <th class="px-4 py-3">Integration</th>
            <th class="px-4 py-3 w-32">Namespace</th>
            <th class="px-4 py-3 w-32">Type</th>
            <th class="px-4 py-3 w-24 text-center">Data</th>
          </tr>
        {{/inline}}
        {{#*inline "tableRows"}}
          <template x-for="ev in items">
            <tr class="text-gray-700 dark:text-gray-400">
              <td class="px-4 py-3">
                <a x-bind:href="ev.url" class="font-medium text-purple-600 dark:text-blue-500 hover:underline" x-text="ev.seq"></a>
              </td>
              <td class="px-4 py-3" x-date="ev.createdAt"></td>
              <td class="px-4 py-3" x-text="ev.integrationId"></td>
              <td class="px-4 py-3" x-text="ev.namespace"></td>
              <td class="px-4 py-3" x-text="ev.type"></td>
              <td class="px-4 py-3 text-center">
                <div class="flex items-center space-x-4 text-sm">
                  <button
                    class="flex items-center mx-auto px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray"
                    @click="openModal(ev)"
                    aria-label="Debug">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round"
                            d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          </template>
        {{/inline}}
      {{/table}}
    </div>
  </div>

  <div x-data="modal">
    {{> events/modal }}
  </div>
</main>
