{{!< base}}

<main class="h-full overflow-y-auto" x-data="eventPage">
  <div class="container px-6 mx-auto grid">
    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
      Event<br>
      <span class="text-xs text-gray-700 dark:text-gray-400">ID <span x-text="event._id"></span></span>
    </h2>

    <dl class="max-w text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
      <div class="flex flex-col pb-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Date</dt>
        <dd class="text-lg font-semibold" x-date="event.createdAt"></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Type</dt>
        <dd class="text-lg font-semibold" x-text="event.type"></dd>
      </div>
      <div class="flex flex-col pt-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Integration ID</dt>
        <dd class="text-lg font-semibold" x-text="event.integrationId"></dd>
      </div>
      <div class="flex flex-col pt-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Event Body</dt>
        <div class="flex whitespace-pre-wrap rounded-lg p-4 bg-gray-900 text-gray-200">
          <code x-code="event.data"></code>
        </div>
      </div>
    </dl>

  </div>
</main>
