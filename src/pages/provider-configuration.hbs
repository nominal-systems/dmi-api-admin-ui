{{!< base}}

<main class="h-full overflow-y-auto" x-data="providerConfigurationPage">
  <div class="container px-6 mx-auto grid">
    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
      Provider Configuration <span x-text="providerConfig.id"></span>
      (<span x-text="providerConfig.providerId?.toUpperCase()"></span>)
    </h2>

    <dl class="max-w text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
          Configuration
          <a href="#" class="ml-2 text-sm text-purple-600 hover:underline" @click="await providerConfigModal.open()">Edit</a>
        </dt>
        <dd class="flex whitespace-pre-wrap rounded-lg p-4 bg-gray-900 text-gray-200 overflow-scroll">
          <code x-code="providerConfig.configurationOptions"></code>
        </dd>
      </div>
    </dl>

    <h3 class="my-6 text-xl font-semibold text-gray-700 dark:text-gray-200">Integrations</h3>
    {{> integrations/table }}
  </div>

  <div x-data="providerConfigModal">
    {{> integrations/provider-config-modal }}
  </div>
</main>
