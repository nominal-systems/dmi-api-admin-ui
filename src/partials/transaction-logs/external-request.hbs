<div class="flex">
  <code>
    <span class="font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 border bg-gray-100 text-gray-800 dark:text-gray-300 border-gray-300"
          :class="{
          'bg-green-100 text-green-800 dark:text-green-300 border-green-300': data.method === 'GET',
          'bg-yellow-100 text-yellow-800 dark:text-yellow-300 border-yellow-300': data.method === 'POST',
          'bg-blue-100 text-blue-800 dark:text-blue-300 border-blue-300': data.method === 'PUT',
          'bg-red-100 text-red-800 dark:text-red-300 border-red-300': data.method === 'DELETE',
          }"
          x-text="data.method"></span>
  </code>
  <span class="ml-2" x-text="data.url"></span>
  <span class="text-xs font-normal ml-2 px-2.5 py-0.5 rounded"
        :class="`bg-${tag.color}-100 text-${tag.color}-800 dark:bg-${tag.color}-900 dark:text-${tag.color}-300`"
        x-text="tag.label">
  </span>
</div>
