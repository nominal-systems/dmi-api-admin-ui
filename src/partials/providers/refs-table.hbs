{{#> table}}
  {{#*inline "tableHeader"}}
    <tr>
      <th scope="col" class="px-6 py-3 w-1/2">
        Name
      </th>
      <th scope="col" class="px-6 py3 hidden xl:table-cell">
        Code
      </th>
      <th scope="col" class="px-6 py-3 w-56 hidden xl:table-cell" x-show="type === 'species'">
        Default breed
      </th>
      <th scope="col" class="px-6 py-3 w-24" x-show="type === 'species'">
        <span class="sr-only">Edit</span>
      </th>
    </tr>
  {{/inline}}
  {{#*inline "tableRows"}}
    <template x-for="item in items">
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            x-text="item.name">
        </th>
        <td class="px-6 py-4 hidden xl:table-cell">
          {{> refs/provider-ref-chip nameExpr="item.name" codeExpr="item.code" max="10rem"}}
        </td>
        <td class="px-6 py-4 hidden xl:table-cell" x-show="type === 'species'">
          <template x-if="item.defaultBreed">
              <span>
                {{> refs/provider-ref-chip nameExpr="item.defaultBreed.name" codeExpr="item.defaultBreed.code" max="10rem"}}
              </span>
          </template>
          <template x-if="!item.defaultBreed">
            {{> refs/provider-ref-chip unset=true}}
          </template>
        </td>
        <td class="px-6 py-4 text-right" x-show="type === 'species'">
          <a href="#" class="font-medium text-purple-600 dark:text-purple-500 hover:underline" @click="openModal(item)">Edit</a>
        </td>
      </tr>
    </template>
  {{/inline}}
{{/table}}
