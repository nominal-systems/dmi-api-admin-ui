<div x-data="practices">
  <div x-data="table">
    {{#> table}}
      {{#*inline "tableHeader"}}
        <tr>
          <th class="px-4 py-3">Name</th>
          <th class="px-4 py-3 w-72">Organization</th>
          <th class="px-4 py-3 w-64">Created Date</th>
          <th class="px-4 py-3 w-[28rem]">Running Integrations</th>
        </tr>
      {{/inline}}
      {{#*inline "tableRows"}}
        <template x-for="practice in items">
          <tr class="text-gray-700 dark:text-gray-400"
              :class="{ 'bg-gray-500 dark:bg-gray-600': practice._checked }">
            <td class="px-4 py-3 truncate" x-text="practice.name"></td>
            <td class="px-4 py-3 truncate" x-text="practice.organization.name"></td>
            <td class="px-4 py-3" x-date="practice.createdAt"></td>
            <td class="px-4 py-3">
              <template x-for="integration in practice.integrations">
                <span class="text-xs font-medium me-2 px-2.5 py-0.5 rounded text-gray-800 dark:text-gray-300"
                      :class="`bg-provider-${integration.provider.id} dark:bg-provider-${integration.provider.id}`"
                      x-text="integration.provider.label">
                </span>
              </template>
            </td>
          </tr>
        </template>
      {{/inline}}
    {{/table}}
  </div>
</div>


